<main class="reset-password-page">

  <section class="devise-form-wrapper">
    <h2 class="devise-form-header">Forgot your password?</h2>

    <div class="devise-form">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="devise-input-box">
          <%= f.text_field :email, autofocus: true, autocomplete: "email", required: true %>
          <%= f.label :email %>
          <i class='bx bxs-envelope'></i>
        </div>

        <div class="actions">
              <%= f.button :submit, class: "devise-btn" do %>
                <span class="btn-text-container">
                  <% split_string("Send reset instructions").map do |char| %>
                    <span class="char-container">
                      <span class="char"><%= char %></span>
                      <span class="char"><%= char %></span>
                    </span>
                  <% end %>
                </span>
              <% end %>
            </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </section>
</main>